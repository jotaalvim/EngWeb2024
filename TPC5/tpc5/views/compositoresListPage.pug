extends layout

block content
    .w3-card-4
        header.w3-container.w3-yellow
            h1.w3-half Compositores
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
            h1.w3-half Períodos
                a.w3-btn.w3-round.w3-grey(href="/compositores/periodos") visitar
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th Período
                    th Actions 
                for s in clist
                    tr
                        td= s.id
                        td
                            a(href="/compositores/"+s.id) #{s.nome}
                        td= s.periodo
                        td
                            a(href="/compositores/edit/"+s.id) [Edit] [
                            a(href="/compositores/delete/"+s.id) Delete]
